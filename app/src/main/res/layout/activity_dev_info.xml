<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    android:id="@+id/devInfo"
    tools:context=".Profile">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:cardElevation="10dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/closeButtonDevInfo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                app:tint="?attr/colorOnSecondary"
                android:src="@drawable/close_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:layout_weight="1"
                android:text="Dev info."/>

            <ImageView
                android:id="@+id/devInfoButton"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="invisible"
                android:background="@drawable/transparent_ripple_background"
                android:scaleType="centerInside"
                android:src="@drawable/alert_circle" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dev_img"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginVertical="32dp"
            app:shapeAppearanceOverlay="@style/CircleImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="14sp"
            android:text="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:text="H.M.S.D. YAPA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="14sp"
            android:text="Student No."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:text="2020/T/00929"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="14sp"
            android:text="Release Version"/>
        <TextView
            android:id="@+id/releaseVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnSecondary"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_button"
                android:textColor="?attr/colorOnPrimary"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Exit"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>